@model StudyPlanner.Models.StudySession

@{
    ViewData["Title"] = "Delete Study Session";
}

<h1>Delete Study Session</h1>

<h3>Are you sure you want to delete this session?</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.StudyTask)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StudyTask.Title)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StartTime)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.EndTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EndTime)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="StudyTask" asp-action="Details" asp-route-id="@Model.StudyTaskId" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
