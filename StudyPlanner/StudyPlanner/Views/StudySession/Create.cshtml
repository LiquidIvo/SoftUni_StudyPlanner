@model StudyPlanner.Models.StudySession

<h1>Create Study Session</h1>

<form asp-action="Create">
    <div class="form-group">
        <label>Task</label>
        <input type="text" class="form-control" value="@ViewBag.StudyTaskTitle" disabled />
        <input type="hidden" asp-for="StudyTaskId" value="@ViewBag.StudyTaskId" />
    </div>

    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
