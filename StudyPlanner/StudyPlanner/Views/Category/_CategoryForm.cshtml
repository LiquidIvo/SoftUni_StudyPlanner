@model StudyPlanner.Models.Category

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group d-flex align-items-center">
    <label asp-for="Color" class="control-label me-2"></label>
    <input asp-for="Color" type="color" style="width:50px; height:30px;" />
    <span asp-validation-for="Color" class="text-danger ms-2"></span>
</div>
